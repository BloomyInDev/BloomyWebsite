---
import Button from "./Button.astro";
const {postName, postUrl, postDate, postId} = Astro.props
let date = 'Unknown'
if (postDate) {
    date = new Date(Date.parse(postDate.slice(0,10))).toLocaleString("en-US", {
  weekday: "long",
  year: "numeric",
  month: "long",
  day: "numeric",
})
}
---
<div id={`card${postId}`} class="max-w-md grow w-full h-32 bg-gray-800 hover:bg-blue-800 hover:shadow-blue-900 rounded-2xl shadow-xl p-2 transition-all ease-in-out duration-300 delay-0" data-href={postUrl}>
    <div class="flex flex-col justify-between h-full">
        <p class="text-2xl font-bold">{postName}</p>
        <div class="flex justify-between items-center">
            <p>{date}</p>
            <Button href={postUrl} text="Read"></Button>
        </div>
    </div>
</div>
<script define:vars={{postId}}>
let doc = document.getElementById(`card${postId}`)
doc.addEventListener('click', () => {
    window.location.href = doc.attributes["data-href"].value;
})
</script>