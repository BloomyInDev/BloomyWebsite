---
import LinkOut from './LinkOut.astro'
const { projectName, projectDesc = '', projectDate, projectUrl } = Astro.props
---

<div
    class="h-40 w-full max-w-md grow rounded-2xl bg-gray-800 p-2 shadow-xl transition-all delay-0 duration-200 ease-in-out hover:bg-blue-950"
>
    <div class="flex h-full flex-col justify-between">
        <div class="flex flex-row justify-between">
            <p class="text-2xl font-bold">{projectName}</p>{
                projectUrl && <LinkOut href={projectUrl} />
            }
        </div>
        <p>{projectDesc}</p>
        <div class="flex items-center justify-between">
            <p class="break-words">{projectDate}</p>

            <div class="flex h-full flex-row items-end gap-2">
                <slot />
            </div>
        </div>
    </div>
</div>
