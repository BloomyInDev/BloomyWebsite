---
import Button from "./Button.astro";
const {postName, postUrl, postDate} = Astro.props
let date = 'Unknown'
if (postDate) {
    date = new Date(Date.parse(postDate.slice(0,10))).toLocaleString("en-US", {
  weekday: "long",
  year: "numeric",
  month: "long",
  day: "numeric",
})
}
---
<div  class="max-w-md grow w-full h-32 bg-gray-800 hover:bg-blue-950 rounded-2xl shadow-xl p-2 transition-all ease-in-out duration-200 delay-0">
    <div class="flex flex-col justify-between h-full">
        <p class="text-2xl font-bold">{postName}</p>
        <div class="flex justify-between items-center">
            <p>{date}</p>
            <Button href={postUrl} text="Read"></Button>
        </div>
    </div>
</div>