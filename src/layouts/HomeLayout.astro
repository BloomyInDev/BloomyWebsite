---
import Head from '../components/Head.astro'
import Navigation from '../components/Navigation.astro'
import Footer from '../components/Footer.astro'
const { extendedTitle } = Astro.props
---

<html lang="en">
    <Head extendedTitle={extendedTitle} />
    <body class="bg-gradient-to-b from-blue-950 to-blue-900">
        <div class="overflow-hidden">
            <div class="gradient absolute left-0 top-0 -z-50 h-full w-full"></div>
        </div>
        <div class="layout m-0 grid h-full min-h-screen text-gray-300">
            <Navigation />
            <div class="m-1">
                <slot />
            </div>
            <Footer />
        </div>
        <style>
            @keyframes mover {
                0% {
                    transform: scale(50%);
                }
                100% {
                    transform: scale(100%);
                }
            }
            @keyframes mover-phone {
                0% {
                    transform: scale(25%);
                }
                100% {
                    transform: scale(100%);
                }
            }
            .gradient {
                opacity: 1;
                background: content-box radial-gradient(circle, rgb(56 189 248), transparent 25%);
                animation: mover 2.5s infinite alternate;
            }
            @media (max-width: 768px) {
                .gradient {
                    opacity: 1;
                    background: content-box
                        radial-gradient(circle, rgb(56 189 248), transparent 40%);
                    animation: mover-phone 2.5s infinite alternate;
                }
            }
            .layout {
                grid-template-rows: auto 1fr auto;
            }
        </style>
    </body>
</html>
